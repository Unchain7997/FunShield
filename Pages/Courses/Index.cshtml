@page
@model FunShield.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Language</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>@course.Language</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@course.CourseID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@course.CourseID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@course.CourseID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="Create" class="btn btn-primary">Add New Course</a>