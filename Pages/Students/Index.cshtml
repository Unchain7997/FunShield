@page
@model FunShield.Pages_Students.IndexModel

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search students by name..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@(Model.SortOrder == "FirstName" ? "FirstName_Desc" : "FirstName")"
                   asp-route-SearchString="@Model.SearchString" asp-route-PageNumber="1">First Name
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@(Model.SortOrder == "LastName" ? "LastName_Desc" : "LastName")"
                   asp-route-SearchString="@Model.SearchString" asp-route-PageNumber="1">Last Name
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@(Model.SortOrder == "Age" ? "Age_Desc" : "Age")"
                   asp-route-SearchString="@Model.SearchString" asp-route-PageNumber="1">Age
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@(Model.SortOrder == "Grade" ? "Grade_Desc" : "Grade")"
                   asp-route-SearchString="@Model.SearchString" asp-route-PageNumber="1">Grade
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@(Model.SortOrder == "EnrollmentHistory" ? "EnrollmentHistory_Desc" : "EnrollmentHistory")"
                   asp-route-SearchString="@Model.SearchString" asp-route-PageNumber="1">Enrollment History
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@(Model.SortOrder == "SessionID" ? "SessionID_Desc" : "SessionID")"
                   asp-route-SearchString="@Model.SearchString" asp-route-PageNumber="1">Session ID
                </a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                <td>@Html.DisplayFor(modelItem => item.EnrollmentHistory)</td>
                <td>@Html.DisplayFor(modelItem => item.SessionID)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.StudentID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.StudentID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.StudentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center">
    <a asp-page="./Index" asp-route-PageNumber="@(Model.PageNumber - 1)" asp-route-SortOrder="@Model.SortOrder" asp-route-SearchString="@Model.SearchString" 
       class="btn btn-primary" disabled="@(Model.PageNumber == 1)">Previous</a>
    <span>Page @Model.PageNumber of @Model.TotalPages</span>
    <a asp-page="./Index" asp-route-PageNumber="@(Model.PageNumber + 1)" asp-route-SortOrder="@Model.SortOrder" asp-route-SearchString="@Model.SearchString" 
       class="btn btn-primary" disabled="@(Model.PageNumber == Model.TotalPages)">Next</a>
</div>